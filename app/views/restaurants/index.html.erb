<h1>Restaurants</h1>

<div class="Container">
<ul>
  <% @restaurants.each do |restaurant| %>
    <li><%= link_to restaurant.name, restaurant_path(restaurant) %>: <%= restaurant.category %></li>
  <% end %>
</ul>
</div>

<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary" %> 